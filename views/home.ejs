<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="hero-section text-center text-white py-5">
      <div class="container">
        <h1 class="display-4 fw-bold">Welcome to Blogify</h1>
        <p class="fs-4 lead">
          Your daily dose of interesting articles and stories. Explore, read,
          and share your thoughts with the world.
        </p>
        <% if (locals.user) { %>
          <a class="btn btn-ghost btn-lg mt-3" href="/blog/add-new" role="button">
            <i class="bi bi-plus-circle-fill"></i> Add New Blog
          </a>
        <% } %>
      </div>
    </div>
    <div class="container mt-5">
      <h2 class="mb-4 text-center">Latest Posts</h2>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% blogs.forEach((blog, index) => { %>
        <div class="col" style="animation-delay: <%= index * 100 %>ms;">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 200px; object-fit: cover;"/>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto align-self-start"><i class="bi bi-book-fill"></i> Read More</a>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
              <small>By <%= blog.createdBy ? blog.createdBy.fullName : 'Unknown Author' %></small>
              <small><i class="bi bi-clock"></i> <%= blog.readingTime %></small>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/script.ejs') %>
  </body>
</html>